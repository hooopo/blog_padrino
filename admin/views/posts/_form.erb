<%= error_messages_for :post, :header_tag => 'h4', :class =>'hide' %>

<fieldset class='control-group'>
  <%= f.label :title, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :title, :class => 'input-xxlarge' %>
    <span class='help-inline'> Ex: a simple text</span>
  </div>
</fieldset>
<fieldset class='control-group'>
  <%= f.label :body, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_area :body, :class => 'input-xxlarge' %>
    <span class='help-inline'> Ex: a simple text</span>
  </div>
</fieldset>


<div class="actions">
  <%= f.submit 'Save', :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit 'Save and continue', :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= f.submit 'Cancel', :onclick => "window.location='#{url(:posts, :index)}';return false", :class => 'btn' %>
</div>
