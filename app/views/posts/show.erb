<article class="post">
  <header>
    <h1><%= @post.title %></h1>
    <span class="date"><%= readable_date(@post.created_at) %></span>
  </header>

  <section class="content">
    <%= @post.rich_body %>
  </section>

  <section class="comments">
      <div id="disqus_thread"></div>
      <script type="text/javascript" src="http://disqus.com/forums/hooopo/embed.js"> </script>
      <noscript><a href="http://hooopo.disqus.com/?url=ref">View the discussion thread.</a></noscript>
      <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
  </section>
</article>

